<com.oblivion.slideviewdrag.SlideViewDrag xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ssd_drag"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00ffffff">


        <LinearLayout
            android:id="@+id/ll_randownames"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_left_pic"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:src="@drawable/head" />

            <TextView
                android:id="@+id/tv_wocao"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="卧槽,怎么不显示"
                android:textColor="#ffffff"
                android:textSize="20sp" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ListView
                    android:id="@+id/lv_randomnames"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"></ListView>

            </ScrollView>
        </LinearLayout>


    </LinearLayout>

    <com.oblivion.slideviewdrag.IntentceptLineaLayout
        android:id="@+id/sill"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#3F51B5">

            <ImageView
                android:id="@+id/iv_pic"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:src="@drawable/head" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"></LinearLayout>
        </RelativeLayout>

        <ListView
            android:id="@+id/lv_names"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ListView>
    </com.oblivion.slideviewdrag.IntentceptLineaLayout>


</com.oblivion.slideviewdrag.SlideViewDrag>
